<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.HomeFragment"
    android:background="@color/learnify_background_dark_blue"> <androidx.gridlayout.widget.GridLayout
    android:id="@+id/grid_navigation_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp" android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="center_horizontal|top"
    app:columnCount="2"
    app:rowCount="2"
    app:useDefaultMargins="true">

    <LinearLayout
        android:id="@+id/explore_button_home"  android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/grid_button_background" android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_explore" android:contentDescription="@string/cd_explore_icon" app:tint="@color/learnify_icon_tint" /> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/explore" android:textColor="@color/learnify_text_light"
        android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/community_button_home" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/grid_button_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_community" android:contentDescription="@string/cd_community_icon" app:tint="@color/learnify_icon_tint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/community" android:textColor="@color/learnify_text_light"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/saved_button_home" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/grid_button_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_saved" android:contentDescription="@string/cd_saved_icon" app:tint="@color/learnify_icon_tint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/saved" android:textColor="@color/learnify_text_light"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_button_home" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/grid_button_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_create" android:contentDescription="@string/cd_create_icon" app:tint="@color/learnify_icon_tint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/create" android:textColor="@color/learnify_text_light"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.gridlayout.widget.GridLayout>

</ScrollView>