<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/learnify_background_dark_blue"
    android:padding="16dp"
    tools:context=".fragments.ArticleEditorFragment">

    <EditText
        android:id="@+id/edit_text_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:hint="Enter Title..."
        android:inputType="textCapSentences"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/medium_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_article_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:gravity="top|start"
        android:hint="Write your content here..."
        android:inputType="textMultiLine|textCapSentences"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/medium_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_save_article"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_article_title" />

    <Button
        android:id="@+id/button_save_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/very_dark_cyan"
        android:text="Save Content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>